<%= form_with(model: @post, local: true ,url: choose_new_or_edit ) do |form| %>
　<% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= @post.errors.count %>つ言い方間違ってるよ。</h2>
      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="post">
    <div class="post_content">
      <%= form.text_area :content, style: "font-size: 10px" %>
    </div>
  </div>
  <%= form.submit "言ってみる" %>
  <% end %>
  <br>
  <br>
  <%= link_to "今まで何言ったっけ？", posts_path %>
